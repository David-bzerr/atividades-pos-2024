             xsi:schemaLocation="http://imobiliaria.org imobiliaria.xsd">

    <!-- Início da definição de um imóvel, identificado por um ID único -->
    <imovel id="1">
        <!-- Descrição do imóvel, fornecendo informações gerais sobre suas características -->
        <descricao>Apartamento compacto de 2 quartos, 1 banheiro, localizado no bairro Central, ideal para quem busca conforto em um espaço otimizado.</descricao>
        
        <!-- Informações sobre o proprietário do imóvel -->
        <proprietario>
            <nome>Izac</nome> <!-- Nome do proprietário -->
            <email>izac.nasc@example.com</email> <!-- Email do proprietário -->
            <telefone>(84) 99999-9999</telefone> <!-- Primeiro telefone de contato do proprietário -->
            <telefone>(84) 99999-8888</telefone> <!-- Segundo telefone de contato do proprietário -->
        </proprietario>
        
        <!-- Endereço do imóvel -->
        <endereco>
            <rua>Rua das Flores</rua> <!-- Rua onde o imóvel está localizado -->
            <bairro>Central</bairro> <!-- Bairro onde o imóvel está localizado -->
            <cidade>São Paulo</cidade> <!-- Cidade onde o imóvel está localizado -->
            <numero>101</numero> <!-- Número do imóvel na rua -->
        </endereco>
        
        <!-- Características do imóvel -->
        <caracteristicas>
            <tamanho>50</tamanho> <!-- Tamanho do imóvel em metros quadrados -->
            <numQuartos>2</numQuartos> <!-- Número de quartos no imóvel -->
            <numBanheiros>1</numBanheiros> <!-- Número de banheiros no imóvel -->
        </caracteristicas>
        
        <!-- Valor do imóvel em uma determinada unidade monetária (ex.: R$) -->
        <valor>350000</valor>
    </imovel>

